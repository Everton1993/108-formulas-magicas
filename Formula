<script>
document.getElementById('buyButton').addEventListener('click', function() {
  window.location.href = "https://pay.kiwify.com.br/1KoK1pK";
});

// Efeito parallax suave
document.addEventListener('mousemove', function(e) {
  const moveX = (e.clientX * 0.005);
  const moveY = (e.clientY * 0.005);
  
  document.querySelectorAll('.floating').forEach(function(element) {
    element.style.transform = `translate(${moveX}px, ${moveY}px)`;
  });
});

// Timer de oferta
function startOfferTimer() {
  const endTime = new Date().getTime() + (30 * 60 * 1000); // 30 minutos

  const timer = setInterval(() => {
    const now = new Date().getTime();
    const distance = endTime - now;
    
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    document.querySelector('.price-tag').innerHTML = 
      `<small class="text-muted text-decoration-line-through">R$ 197,00</small><br>
       R$ 97,00<br>
       <small class="text-warning">Oferta expira em: ${minutes}:${seconds < 10 ? '0' : ''}${seconds}</small>`;

    if (distance < 0) {
      clearInterval(timer);
      document.querySelector('.price-tag').innerHTML = `R$ 197,00`;
    }
  }, 1000);
}

startOfferTimer();
</script>

